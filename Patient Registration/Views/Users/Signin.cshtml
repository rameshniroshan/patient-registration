@model Patient_Registration.Models.Call_Users

<div class="row ">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2>Users Login</h2>
        <div class=" border border-warning p-3">
            <form asp-action="Signin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group toplogoandgreentext">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group toplogoandgreentext">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-success" />
                    <input class="btn btn-warning btnClear" type="button" value="Clear" />

                </div>
            </form>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
